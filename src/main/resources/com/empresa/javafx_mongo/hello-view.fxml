<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="991.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.empresa.javafx_mongo.controller.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="582.0" prefWidth="951.0">
      <children>
          <TableView fx:id="datosTable" layoutX="248.0" layoutY="25.0" prefHeight="491.0" prefWidth="689.0">
              <columns>
                  <TableColumn fx:id="idColumn" prefWidth="229.0" resizable="false" text="ID">
                      <cellValueFactory>
                          <PropertyValueFactory property="_id" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="nombreColumn" prefWidth="182.0" text="Nombre">
                      <cellValueFactory>
                          <PropertyValueFactory property="nombre" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="precioColumn" prefWidth="86.0" resizable="false" text="Precio">
                      <cellValueFactory>
                          <PropertyValueFactory property="precio" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="cantidadColumn" prefWidth="95.0" resizable="false" text="Cantidad">
                      <cellValueFactory>
                          <PropertyValueFactory property="cantidad" />
                      </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="categoriaColumn" prefWidth="119.0" resizable="false" text="Categoría">
                      <cellValueFactory>
                          <PropertyValueFactory property="categoria" />
                      </cellValueFactory>
                  </TableColumn>
              </columns>
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
          </TableView>
          <VBox layoutX="14.0" layoutY="25.0" prefHeight="491.0" prefWidth="219.0">
              <children>
                  <TitledPane expanded="false" prefWidth="200.0" text="Agregar producto">
                      <content>
                          <VBox prefWidth="198.0">
                              <children>
                                  <TextField fx:id="txtNombre" layoutX="25.0" layoutY="14.0" promptText="nombre" />
                                  <TextField fx:id="txtPrecio" layoutX="25.0" layoutY="39.0" promptText="precio" />
                                  <TextField fx:id="txtCantidad" layoutX="25.0" layoutY="64.0" promptText="cantidad" />
                                  <ComboBox fx:id="comboCategoria" layoutX="24.0" layoutY="104.0" prefWidth="150.0" promptText="Categoría" visibleRowCount="5" />
                                  <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#onBtnCreateClick" style="-fx-background-color: #95d34e;" text="Agregar">
                              <VBox.margin>
                                 <Insets left="65.0" top="15.0" />
                              </VBox.margin></Button>
                              </children>
                          </VBox>
                      </content>
                  </TitledPane>
                  <TitledPane expanded="false" prefWidth="200.0" text="Modificar producto">
                      <content>
                          <VBox prefWidth="198.0">
                              <children>
                                  <TextField fx:id="txtNombreUpdate" layoutX="25.0" layoutY="14.0" promptText="nombre" />
                                  <TextField fx:id="txtPrecioUpdate" layoutX="25.0" layoutY="39.0" promptText="precio" />
                                  <Spinner fx:id="spinCantidad" prefHeight="25.0" prefWidth="67.0" />
                                  <ComboBox fx:id="comboCategoria1" layoutX="24.0" layoutY="104.0" prefWidth="150.0" promptText="Categoría" visibleRowCount="5" />
                                  <Button onAction="#onBtnUpdateClick" mnemonicParsing="false"  style="-fx-background-color: #34cafc;" text="Actualizar">
                              <VBox.margin>
                                 <Insets left="65.0" top="15.0" />
                              </VBox.margin></Button>
                              </children>
                          </VBox>
                      </content>
                  </TitledPane>
              </children>
          </VBox>
      </children>
   </Pane>
    <!--<Button onAction="#onHelloButtonClick" text="Cargar Datos!" />-->
</VBox>
